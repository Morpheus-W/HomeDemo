<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.yintangwen.homedemo.MainFragmentActivity">


    <TextView
        android:layout_centerInParent="true"
        android:text="中间内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="切换"
        android:onClick="onSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/loc_layout"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <fragment
            android:name="com.example.yintangwen.homedemo.LocFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/navi_layout"
        android:layout_width="200dp"
        android:layout_height="200dp">

        <fragment
            android:name="com.example.yintangwen.homedemo.NaviFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
